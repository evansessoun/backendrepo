<% if (title) { %> 
<h1 id="titled"><%= title %> </h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => {%>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>


<p>ALL FIELDS ARE REQUIRED</p>
<form class="register-page" action="/account/register" method="post">
    <label for="account_firstname">First name</label>
    <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>"><br>
    <label for="account_lastname">Last name</label>
    <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>"><br>
    <label for="account_email">Email</label>
    <input type="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>"><br>
    <label for="account_password" >Password</label>
    <input id="pswdInput" type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
    <span><i>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character</i></span>
    <button type="button" id="pswdBtn">Show Password</button>
    <button type="submit" id="register-btn">Register</button>
</form>

<% if (title) { %> 
<h1 id="titled"><%= title %> </h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => {%>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>


<form class="loginForm" action="/account/login" method="post" >
    <label for="account_email" >Email</label>
    <input type="email" name="account_email" required><br>
    <label for="account_password">Password</label>
    <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
    <button type="submit" id="loginBtn">Login</button>
    <p>No account?<a href="/account/register">Sign-up</a></p>
</form>